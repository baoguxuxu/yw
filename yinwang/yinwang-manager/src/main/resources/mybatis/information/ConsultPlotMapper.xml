<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yinwang.information.dao.ConsultPlotDao">

	<select id="get" resultType="com.yinwang.information.domain.ConsultPlotDO">
		select `id`,`consult_id`,`plot_id` from t_consult_plot where id = #{value}
	</select>

	<select id="list" resultType="com.yinwang.information.domain.ConsultPlotDO">
		select `id`,`consult_id`,`plot_id` from t_consult_plot
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultId != null and consultId != ''"> and consult_id = #{consultId} </if>
		  		  <if test="plotId != null and plotId != ''"> and plot_id = #{plotId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_consult_plot
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultId != null and consultId != ''"> and consult_id = #{consultId} </if>
		  		  <if test="plotId != null and plotId != ''"> and plot_id = #{plotId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yinwang.information.domain.ConsultPlotDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_consult_plot
		(
			`consult_id`, 
			`plot_id`
		)
		values
		(
			#{consultId}, 
			#{plotId}
		)
	</insert>
	 
	<update id="update" parameterType="com.yinwang.information.domain.ConsultPlotDO">
		update t_consult_plot 
		<set>
			<if test="consultId != null">`consult_id` = #{consultId}, </if>
			<if test="plotId != null">`plot_id` = #{plotId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_consult_plot where id = #{value}
	</delete>
	<delete id="removePlot">
		delete from t_consult_plot where consult_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_consult_plot where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>